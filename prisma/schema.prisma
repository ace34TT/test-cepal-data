generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Frame {
  id          String   @id @default(cuid())
  name        String?
  brand       String
  description String?
  price       Float
  currency    String   @default("MGA")
  thumbnail   String?
  isAvailable Boolean  @default(true)
  materials   String[]

  // Stockera { width: 140, height: 50, bridge: 18, unit: "mm" }
  dimensions Json?

  // Stockera la structure exacte de vos fichiers JSON :
  configurations Json?

  // Stockera { modelUrl: "...", scale: 1, camera: { ... } }
  threeD Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
